<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:properties="clr-namespace:Tira.App.Properties">
    <Style TargetType="{x:Type xctk:MessageBox}">
        <Setter Property="WindowBackground" Value="Silver" />
        <Setter Property="YesButtonContent" Value="{x:Static properties:Resources.Xcced_MessageBox_Yes}"/>
        <Setter Property="NoButtonContent" Value="{x:Static properties:Resources.Xcced_MessageBox_No}"/>
        <Setter Property="CancelButtonContent" Value="{x:Static properties:Resources.Xcced_MessageBox_Cancel}" />
    </Style>
</ResourceDictionary>