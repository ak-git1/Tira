<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style x:Key="ErrorLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="DarkRed" />
    </Style>
    <Style x:Key="ApplicationName" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="25" />
    </Style>
    <Style x:Key="RecentProjectName" TargetType="{x:Type Label}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style x:Key="RecentProjectPath" TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="Margin" Value="0,-10,0,0" />
    </Style>
</ResourceDictionary>