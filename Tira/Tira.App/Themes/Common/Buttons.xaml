<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Button}">
        <Setter Property="Height" Value="25" />
    </Style>
    <Style x:Key="IntroductionWindowButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Margin" Value="10,0,10,0"/>
    </Style>
    <Style x:Key="DialogFormButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="10,0,10,0"/>
    </Style>
    <Style x:Key="VerticalStackButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>
</ResourceDictionary>